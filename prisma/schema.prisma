generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Control {
  id            Int          @id @default(autoincrement())
  name          String
  status        Boolean
  dateStarted   DateTime
  dateCompleted DateTime
  owner         ControlOwner @relation(fields: [ownerId], references: [id])
  ownerId       Int          @unique

  @@index(ownerId)
}

model ControlOwner {
  id       Int       @id @default(autoincrement())
  controls Control[]
  user     User      @relation(fields: [userId], references: [id])
  userId   Int       @unique

  @@index(userId)
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String
  role         Role          @default(USER)
  controlOwner ControlOwner?
}

enum Role {
  USER
  ADMIN
}
